{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./hooks/*"],
      "@ui/*": ["./ui/*"],
      "contexts/*": ["./contexts/*"],
      "features/*": ["./features/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
